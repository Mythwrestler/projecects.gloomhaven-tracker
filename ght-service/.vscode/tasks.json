{
    "version": "2.0.0",
    "options": {
        "env": {
            "DB_SERVER": "host.docker.internal",
            "DB_PORT": "5432",
            "DB_DATABASE": "ght-db",
            "DB_USER": "pguser",
            "DB_PASSWORD": "pguser",
        }
    },
    "inputs": [
        {
            "id": "migrationName",
            "default": "Migration Name Here",
            "description": "Name of Migration",
            "type": "promptString"
        }
    ],
    "tasks": [
        {
            "label": "Build EF Core Migration",
            "command": "dotnet",
            "type": "process",
            "args": [
                "ef",
                "migrations",
                "add",
                "\"${input:migrationName}\"",
                "--project",
                "${workspaceFolder}/Database/ght-database.csproj",
                "--startup-project"
                ,"${workspaceFolder}/Service"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Apply EF Core Migration",
            "command": "dotnet",
            "type": "process",
            "args": [
                "ef",
                "database",
                "update",
                "--project",
                "${workspaceFolder}/Database/ght-database.csproj",
                "--startup-project"
                ,"${workspaceFolder}/Service"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ght-utility.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/ght-utility.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/ght-utility.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}